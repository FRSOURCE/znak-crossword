{
  "name": "@frsource/znak-crossword",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "generate": "pnpm build --base=/frs-path-to-be-replaced-frs/ && node prepare-php-ssg.mjs && pnpm move-to-plugin",
    "generate:prod": "VITE_API_URL=https://www.miesiecznik.znak.com.pl pnpm generate",
    "move-to-plugin": "rm -rf ../crossword-plugin/src/public/template && cp -r dist-php-ssg/ ../crossword-plugin/src/public/template",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "build-only": "vite-ssg build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@vueuse/core": "^12.7.0",
    "canvas-confetti": "^1.9.3",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@frsource/eslint-config": "^1.35.0",
    "@frsource/prettier-config": "^1.23.0",
    "@playwright/test": "^1.50.1",
    "@rollup/pluginutils": "^5.1.4",
    "@tailwindcss/vite": "^4.0.6",
    "@tsconfig/node22": "^22.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.13.1",
    "@unhead/vue": "2.0.0-rc.9",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.3.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.18.0",
    "eslint-plugin-oxlint": "^0.15.6",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.15.0",
    "happy-dom": "^17.4.2",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.15.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.6",
    "type-fest": "^4.34.1",
    "typescript": "~5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-tailwindcss-cleaner": "^1.1.0",
    "vite-plugin-vue-devtools": "^7.7.1",
    "vite-ssg": "^25.2.0",
    "vue-tsc": "^2.2.0"
  },
  "packageManager": "pnpm@10.4.1"
}
